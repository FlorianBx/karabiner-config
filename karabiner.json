{
    "profiles": [
        {
            "complex_modifications": {
                "rules": [
                    {
                        "description": "Custom: Caps Lock -> Hyper Mode (if held) / Escape (if tapped)",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "caps_lock",
                                    "modifiers": { "optional": ["any"] }
                                },
                                "to_if_alone": [{ "key_code": "escape" }],
                                "to_if_held_down": [
                                    {
                                        "set_variable": {
                                            "name": "hyper_mode_is_active",
                                            "value": 1
                                        }
                                    }
                                ],
                                "to_after_key_up": [
                                    {
                                        "set_variable": {
                                            "name": "hyper_mode_is_active",
                                            "value": 0
                                        }
                                    }
                                ],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Hyper Mode App Hotkeys",
                        "manipulators": [
                            {
                                "from": { "key_code": "t" },
                                "to": [{ "shell_command": "open -a 'Ghostty.app'" }],
                                "conditions": [
                                    {
                                        "type": "variable_if",
                                        "name": "hyper_mode_is_active",
                                        "value": 1
                                    }
                                ],
                                "type": "basic"
                            },
                            {
                                "from": { "key_code": "e" },
                                "to": [{ "shell_command": "open -a 'Microsoft Edge.app'" }],
                                "conditions": [
                                    {
                                        "type": "variable_if",
                                        "name": "hyper_mode_is_active",
                                        "value": 1
                                    }
                                ],
                                "type": "basic"
                            },
                            {
                                "from": { "key_code": "v" },
                                "to": [{ "shell_command": "open -a 'Visual Studio Code.app'" }],
                                "conditions": [
                                    {
                                        "type": "variable_if",
                                        "name": "hyper_mode_is_active",
                                        "value": 1
                                    }
                                ],
                                "type": "basic"
                            }
                        ]
                    }
                ]
            },
            "virtual_hid_keyboard": { "keyboard_type_v2": "iso" }
        }
    ]
}
