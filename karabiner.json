{
  "profiles": [
    {
      "complex_modifications": {
        "rules": [
          {
            "description": "Custom: Caps Lock -> Hyper Mode (if held) / Escape (if tapped) - LOW LATENCY",
            "manipulators": [
              {
                "type": "basic",
                "from": {
                  "key_code": "caps_lock",
                  "modifiers": { "optional": ["any"] }
                },
                "to_if_alone": [{ "key_code": "escape" }],
                "to_if_held_down": [
                  {
                    "set_variable": {
                      "name": "hyper_mode_is_active",
                      "value": 1
                    }
                  }
                ],
                "to_after_key_up": [
                  {
                    "set_variable": {
                      "name": "hyper_mode_is_active",
                      "value": 0
                    }
                  }
                ],
                "parameters": {
                  "basic.to_if_alone_timeout_milliseconds": 100,
                  "basic.to_if_held_down_threshold_milliseconds": 100
                }
              }
            ]
          },
          {
            "description": "Hyper Mode: Notes App Specific (PRIORITY)",
            "manipulators": [
              {
                "type": "basic",
                "from": { "key_code": "n" },
                "to": [{ "key_code": "n", "modifiers": ["left_command"] }],
                "conditions": [
                  {
                    "type": "variable_if",
                    "name": "hyper_mode_is_active",
                    "value": 1
                  },
                  {
                    "type": "frontmost_application_if",
                    "bundle_identifiers": ["com.apple.Notes"]
                  }
                ]
              }
            ]
          },
          {
            "description": "Hyper Mode: Microsoft Edge Specific",
            "manipulators": [
              {
                "type": "basic",
                "from": { "key_code": "d" },
                "to": [
                  {
                    "key_code": "i",
                    "modifiers": ["left_option", "left_command"]
                  }
                ],
                "conditions": [
                  {
                    "type": "variable_if",
                    "name": "hyper_mode_is_active",
                    "value": 1
                  },
                  {
                    "type": "frontmost_application_if",
                    "bundle_identifiers": ["com.microsoft.edgemac"]
                  }
                ]
              },
              {
                "type": "basic",
                "from": {
                  "key_code": "k",
                  "modifiers": { "mandatory": ["left_command"] }
                },
                "to": [
                  {
                    "key_code": "tab",
                    "modifiers": ["left_control", "left_shift"]
                  }
                ],
                "conditions": [
                  {
                    "type": "variable_if",
                    "name": "hyper_mode_is_active",
                    "value": 1
                  },
                  {
                    "type": "frontmost_application_if",
                    "bundle_identifiers": ["com.microsoft.edgemac"]
                  }
                ]
              },
              {
                "type": "basic",
                "from": {
                  "key_code": "j",
                  "modifiers": { "mandatory": ["left_command"] }
                },
                "to": [{ "key_code": "tab", "modifiers": ["left_control"] }],
                "conditions": [
                  {
                    "type": "variable_if",
                    "name": "hyper_mode_is_active",
                    "value": 1
                  },
                  {
                    "type": "frontmost_application_if",
                    "bundle_identifiers": ["com.microsoft.edgemac"]
                  }
                ]
              }
            ]
          },
          {
            "description": "Hyper Mode: Navigation (Vim-style) - GLOBAL FALLBACK",
            "manipulators": [
              {
                "type": "basic",
                "from": { "key_code": "h" },
                "to": [{ "key_code": "left_arrow" }],
                "conditions": [
                  {
                    "type": "variable_if",
                    "name": "hyper_mode_is_active",
                    "value": 1
                  }
                ]
              },
              {
                "type": "basic",
                "from": { "key_code": "j" },
                "to": [{ "key_code": "down_arrow" }],
                "conditions": [
                  {
                    "type": "variable_if",
                    "name": "hyper_mode_is_active",
                    "value": 1
                  }
                ]
              },
              {
                "type": "basic",
                "from": { "key_code": "k" },
                "to": [{ "key_code": "up_arrow" }],
                "conditions": [
                  {
                    "type": "variable_if",
                    "name": "hyper_mode_is_active",
                    "value": 1
                  }
                ]
              },
              {
                "type": "basic",
                "from": { "key_code": "l" },
                "to": [{ "key_code": "right_arrow" }],
                "conditions": [
                  {
                    "type": "variable_if",
                    "name": "hyper_mode_is_active",
                    "value": 1
                  }
                ]
              },
              {
                "type": "basic",
                "from": { "key_code": "w" },
                "to": [
                  { "key_code": "right_arrow", "modifiers": ["left_option"] }
                ],
                "conditions": [
                  {
                    "type": "variable_if",
                    "name": "hyper_mode_is_active",
                    "value": 1
                  }
                ]
              },
              {
                "type": "basic",
                "from": { "key_code": "b" },
                "to": [
                  { "key_code": "left_arrow", "modifiers": ["left_option"] }
                ],
                "conditions": [
                  {
                    "type": "variable_if",
                    "name": "hyper_mode_is_active",
                    "value": 1
                  }
                ]
              }
            ]
          },
          {
            "description": "Hyper Mode: App Hotkeys (Global)",
            "manipulators": [
              {
                "type": "basic",
                "from": { "key_code": "n" },
                "to": [{ "shell_command": "open -a 'Notes.app'" }],
                "conditions": [
                  {
                    "type": "variable_if",
                    "name": "hyper_mode_is_active",
                    "value": 1
                  }
                ]
              },
              {
                "type": "basic",
                "from": { "key_code": "t" },
                "to": [{ "shell_command": "open -a 'Ghostty.app'" }],
                "conditions": [
                  {
                    "type": "variable_if",
                    "name": "hyper_mode_is_active",
                    "value": 1
                  }
                ]
              },
              {
                "type": "basic",
                "from": { "key_code": "e" },
                "to": [{ "shell_command": "open -a 'Microsoft Edge.app'" }],
                "conditions": [
                  {
                    "type": "variable_if",
                    "name": "hyper_mode_is_active",
                    "value": 1
                  }
                ]
              },
              {
                "type": "basic",
                "from": { "key_code": "v" },
                "to": [{ "shell_command": "open -a 'Visual Studio Code.app'" }],
                "conditions": [
                  {
                    "type": "variable_if",
                    "name": "hyper_mode_is_active",
                    "value": 1
                  }
                ]
              },
              {
                "type": "basic",
                "from": { "key_code": "s" },
                "to": [{ "shell_command": "open -a 'Beeper Desktop.app'" }],
                "conditions": [
                  {
                    "type": "variable_if",
                    "name": "hyper_mode_is_active",
                    "value": 1
                  }
                ]
              },
              {
                "type": "basic",
                "from": { "key_code": "m" },
                "to": [{ "shell_command": "open -a 'Spark Desktop.app'" }],
                "conditions": [
                  {
                    "type": "variable_if",
                    "name": "hyper_mode_is_active",
                    "value": 1
                  }
                ]
              }
            ]
          }
        ]
      },
      "virtual_hid_keyboard": { "keyboard_type_v2": "iso" }
    }
  ]
}
